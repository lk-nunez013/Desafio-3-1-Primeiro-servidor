{% extends "layout.njk" %}

{% block head %}
  <title>Portifólio</title>
  <link rel="stylesheet" href="/style.css">
{% endblock %}

{% block content %}
<div id="wrapper">
  <h1>Músicas</h1>
</div>
<section class="cards">
  {% for item in items%}
  <div class="card" id="{{item.id}}">
    <div class="img-ctn {{ 'featured-wrapper' if item.featured }}">
      <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">
    {% if item.featured %}
      <div class="featured">
        Featured
      </div>
    {% endif %}
    </div>
    <div class="card-content">
      <div class="title">{{item.title}}</div>
      <div class="info">
        <p class="time">{{item.duration}}</p>
        <p class="vocal">{{item.vocal}}</p>
      </div>
    </div>
  </div>
  {% endfor %}
</section>

<script src="/script.js"></script>

{% endblock %}
